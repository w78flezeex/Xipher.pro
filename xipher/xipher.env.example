# ===========================================
# Xipher Server Configuration
# ===========================================
# Скопируй этот файл в .env.server и заполни своими данными
# cp xipher.env.example .env.server

# === DATABASE ===
DB_HOST=localhost
DB_PORT=5432
DB_USER=xipher_user
DB_PASSWORD=your_secure_password_here
DB_NAME=xipher_db

# === JWT ===
# Генерация: openssl rand -hex 32
JWT_SECRET=generate_random_64_char_secret_here

# === FIREBASE ===
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_project_id

# === TURN SERVER ===
TURN_SERVER_URL=turn:your-server.com:3478
TURN_USERNAME=turn_username
TURN_PASSWORD=turn_password

# === SERVER ===
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
WEBSOCKET_PORT=8080

# === PUSH NOTIFICATIONS ===
RUSTORE_PROJECT_ID=your_rustore_project_id
FCM_SERVER_KEY=your_fcm_server_key

# === SSL (опционально) ===
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# === DEVELOPMENT ===
NODE_ENV=development
DEBUG=false
