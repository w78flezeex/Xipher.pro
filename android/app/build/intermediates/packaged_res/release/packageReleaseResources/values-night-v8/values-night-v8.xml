        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
    <style name="Xipher.FAB">
        <item name="android:background">@drawable/fab_bg</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>
    <style name="Xipher.Text" parent="">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Xipher.Text.ChatMessage">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Xipher.Text.ChatName">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Xipher.Text.Link">
        <item name="android:textColor">@color/x_text_link</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Xipher.Text.Subtitle">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Xipher.Text.Time">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Xipher.Text.Title">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Xipher.Toolbar">
        <item name="android:background">@color/x_bg_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
