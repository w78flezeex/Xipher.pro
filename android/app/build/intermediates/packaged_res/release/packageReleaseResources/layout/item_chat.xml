<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_card_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical">

        <!-- Avatar with online indicator -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp">

            <ImageView
                android:id="@+id/chatAvatarImage"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/avatar_circle_bg"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/chatAvatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/avatar_circle_bg"
                android:gravity="center"
                android:textColor="@color/x_on_accent"
                android:textStyle="bold"
                android:textSize="18sp" />
            
            <!-- Online indicator -->
            <View
                android:id="@+id/chatOnline"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/online_indicator"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1">

            <!-- Top row: Name + Icons + Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/chatTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/x_text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/chatMuted"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/chat_muted"
                    android:src="@drawable/ic_muted"
                    app:tint="@color/x_text_secondary"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/chatPinned"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/chat_pinned"
                    android:src="@drawable/ic_pin"
                    app:tint="@color/x_text_secondary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/x_text_secondary"
                    android:textSize="13sp"
                    tools:text="12:45" />
            </LinearLayout>

            <!-- Bottom row: Message preview + Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Sender name for groups -->
                <TextView
                    android:id="@+id/chatSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/x_accent_primary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    tools:text="John: " />

                <!-- Message status check marks -->
                <ImageView
                    android:id="@+id/chatStatus"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_msg_delivered"
                    app:tint="@color/x_status_delivered"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chatLast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/x_text_secondary"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Hey, how are you doing today?" />

                <!-- Typing indicator -->
                <TextView
                    android:id="@+id/chatTyping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/typing"
                    android:textColor="@color/x_typing"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chatUnread"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:minWidth="22dp"
                    android:background="@drawable/badge_bg"
                    android:textColor="@color/x_on_accent"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    tools:text="3" />

                <TextView
                    android:id="@+id/chatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/pill_badge"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="@string/chat_type_group"
                    android:textColor="@color/x_text_secondary"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/chatDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="82dp"
        android:background="@color/x_divider" />

</FrameLayout>