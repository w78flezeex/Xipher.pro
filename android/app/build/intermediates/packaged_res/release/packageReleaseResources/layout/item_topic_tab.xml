<?xml version="1.0" encoding="utf-8"?>
<!-- Topic Tab Item - Telegram-style horizontal tab -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topicTabRoot"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:id="@+id/topicTabContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:background="@drawable/topic_tab_bg"
        android:clickable="true"
        android:focusable="true">

        <!-- Icon with emoji -->
        <TextView
            android:id="@+id/topicIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="ðŸ’¬" />

        <!-- Topic name -->
        <TextView
            android:id="@+id/topicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:maxWidth="120dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/x_text_secondary" />

        <!-- Unread badge -->
        <TextView
            android:id="@+id/topicBadge"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:paddingHorizontal="6dp"
            android:gravity="center"
            android:background="@drawable/badge_bg"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
