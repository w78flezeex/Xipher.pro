<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ttlSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/ttl_title"
        android:textColor="@color/x_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ttlOptionOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/ttl_option_off"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ttlOption10s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/ttl_option_10s"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ttlOption1h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/ttl_option_1h"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ttlOption1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/ttl_option_1d"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp" />
</LinearLayout>
