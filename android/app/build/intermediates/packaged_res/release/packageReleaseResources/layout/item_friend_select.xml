<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/chat_card_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp">

        <ImageView
            android:id="@+id/friendAvatarImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/avatar_circle_bg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/friendAvatarLetter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/avatar_circle_bg"
            android:gravity="center"
            android:text="@string/avatar_placeholder"
            android:textColor="@color/x_on_accent"
            android:textStyle="bold"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/friendName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:textColor="@color/x_text_primary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/friendCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/x_accent_start" />
</LinearLayout>
