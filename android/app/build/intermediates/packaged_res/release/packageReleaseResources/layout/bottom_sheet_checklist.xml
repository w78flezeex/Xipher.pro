<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checklistSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="44dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sheet_handle_bg" />

    <TextView
        android:id="@+id/checklistSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/checklist_create_title"
        android:textColor="@color/x_text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/checklistTitleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_bg"
        android:hint="@string/checklist_title_hint"
        android:inputType="textCapSentences"
        android:padding="10dp"
        android:textColor="@color/x_text_primary"
        android:textColorHint="@color/x_text_secondary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/checklistTasksLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/checklist_tasks_label"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/checklistItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/checklistAddItem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_icon"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="8dp"
        android:drawableTint="@color/x_text_secondary"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/checklist_add_item"
        android:textColor="@color/x_text_primary"
        android:textSize="14sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/checklistAllowAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:text="@string/checklist_allow_add"
        android:textColor="@color/x_text_primary" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/checklistAllowCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:checked="true"
        android:text="@string/checklist_allow_check"
        android:textColor="@color/x_text_primary" />

    <Button
        android:id="@+id/checklistSendButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_primary"
        android:text="@string/checklist_send"
        android:textAllCaps="false"
        android:textColor="@color/x_on_accent"
        android:textSize="14sp" />
</LinearLayout>
