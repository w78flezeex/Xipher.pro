<?xml version="1.0" encoding="utf-8"?>
<!-- Add Topic Button Background - Circular dashed border -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/x_bg_tertiary" />
            <stroke android:width="2dp" android:color="@color/x_accent_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/x_border" android:dashWidth="4dp" android:dashGap="2dp" />
        </shape>
    </item>
</selector>
