<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationShareRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_icon"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="@color/x_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/location_share_title"
            android:textColor="@color/x_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/locationMap"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/locationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/location_loading"
        android:textColor="@color/x_text_secondary"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btnSendLocation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_primary"
        android:text="@string/location_send"
        android:textAllCaps="false"
        android:textColor="@color/x_on_accent"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnLiveLocation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_primary"
        android:text="@string/location_live"
        android:textAllCaps="false"
        android:textColor="@color/x_on_accent"
        android:textSize="14sp" />
</LinearLayout>