<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_auth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/auth_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/x_text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvUnlockTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_unlock_title"
                android:textColor="@color/x_text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUnlockSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_unlock_subtitle"
                android:textColor="@color/x_text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_pin_label"
                android:textColor="@color/x_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_pin_hint"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="6"
                android:textColor="@color/x_text_primary"
                android:textColorHint="@color/x_text_secondary"
                android:background="@drawable/input_bg"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnUnlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pin_unlock_button"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_primary"
                android:textColor="@color/x_on_accent" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvSwitchAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_unlock_switch_account"
                android:textColor="@color/x_accent_end"
                android:layout_marginTop="14dp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
