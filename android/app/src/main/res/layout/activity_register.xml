<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_auth">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/auth_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_title"
                    android:textColor="@color/x_text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_subtitle"
                    android:textColor="@color/x_text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_username_label"
                    android:textColor="@color/x_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_username_hint"
                    android:textColor="@color/x_text_primary"
                    android:textColorHint="@color/x_text_secondary"
                    android:background="@drawable/input_bg"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tvUsernameStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/x_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_password_label"
                    android:textColor="@color/x_text_primary"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/x_text_primary"
                    android:textColorHint="@color/x_text_secondary"
                    android:background="@drawable/input_bg"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_confirm_label"
                    android:textColor="@color/x_text_primary"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_confirm_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/x_text_primary"
                    android:textColorHint="@color/x_text_secondary"
                    android:background="@drawable/input_bg"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_button"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_primary"
                    android:textColor="@color/x_on_accent" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvLoginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_login_link"
                    android:textColor="@color/x_accent_end"
                    android:layout_marginTop="14dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
