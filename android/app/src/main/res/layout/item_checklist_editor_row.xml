<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/checklistItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/input_bg"
        android:hint="@string/checklist_item_hint"
        android:inputType="textCapSentences"
        android:padding="10dp"
        android:textColor="@color/x_text_primary"
        android:textColorHint="@color/x_text_secondary"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/checklistItemRemove"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_icon"
        android:contentDescription="@string/checklist_remove_item"
        android:padding="6dp"
        android:src="@drawable/ic_close"
        app:tint="@color/x_text_secondary" />
</LinearLayout>