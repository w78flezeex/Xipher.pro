<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Аватар -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/avatarPlaceholder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_avatar_circle"
            tools:text="JD" />

        <!-- Иконка бана -->
        <ImageView
            android:id="@+id/bannedIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_icon_circle_red"
            android:padding="3dp"
            android:src="@android:drawable/ic_delete"
            android:visibility="gone"
            android:contentDescription="@string/channel_member_banned" />

    </FrameLayout>

    <!-- Информация о пользователе -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/memberName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="John Doe" />

            <!-- Бейдж роли -->
            <TextView
                android:id="@+id/roleBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_badge_primary"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Админ" />

        </LinearLayout>

        <TextView
            android:id="@+id/memberUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            tools:text="@johndoe" />

        <!-- Права (для админов) -->
        <TextView
            android:id="@+id/permissionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Публикация, Закрепление" />

        <!-- Статус пользователя -->
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Иконка действия (стрелка или меню) -->
    <ImageView
        android:id="@+id/actionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_menu_more"
        android:contentDescription="@string/channel_member_actions"
        android:tint="?attr/colorOnSurfaceVariant" />

</LinearLayout>
