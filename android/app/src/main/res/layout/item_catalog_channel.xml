<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Avatar -->
    <FrameLayout
        android:layout_width="52dp"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_channel" />

        <TextView
            android:id="@+id/tvAvatarLetter"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:background="@drawable/avatar_placeholder_bg"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="X" />
    </FrameLayout>

    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Xipher News" />

            <!-- Verified badge -->
            <FrameLayout
                android:id="@+id/verifiedBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/verification_badge_bg"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="✓"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/x_text_secondary"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@xipher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSubscribers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_text_muted"
                android:textSize="12sp"
                tools:text="1.2K подписчиков" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/dot_separator" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_accent"
                android:textSize="12sp"
                tools:text="Технологии" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/x_text_secondary"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"
            android:visibility="gone"
            tools:text="Описание канала в две строки максимум" />
    </LinearLayout>

    <!-- Join button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoin"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="@string/catalog_join"
        android:textSize="13sp"
        app:cornerRadius="8dp" />
</LinearLayout>
