<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Xipher Dark Theme -->
    <style name="Theme.Xipher" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/x_bg_primary</item>
        <item name="android:navigationBarColor">@color/x_nav_bg</item>
        <item name="android:statusBarColor">@color/x_bg_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text Appearances -->
        <item name="android:textColorPrimary">@color/x_text_primary</item>
        <item name="android:textColorSecondary">@color/x_text_secondary</item>
        <item name="android:textColorHint">@color/x_text_hint</item>
        
        <!-- Accent Colors -->
        <item name="colorPrimary">@color/x_accent_primary</item>
        <item name="colorPrimaryVariant">@color/x_accent_end</item>
        <item name="colorOnPrimary">@color/x_on_accent</item>
        <item name="colorSecondary">@color/x_accent_violet</item>
        <item name="colorSecondaryVariant">@color/x_accent_pink</item>
        <item name="colorOnSecondary">@color/x_on_accent</item>
        <item name="colorSurface">@color/x_bg_card</item>
        <item name="colorOnSurface">@color/x_text_primary</item>
        
        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/x_ripple</item>
    </style>
    
    <!-- Transparent Theme for overlays -->
    <style name="Theme.Xipher.Transparent" parent="Theme.Xipher">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="Theme.Xipher.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="colorPrimary">@color/x_accent_primary</item>
    </style>
    
    <!-- BottomSheet Theme -->
    <style name="Theme.Xipher.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Xipher.BottomSheet</item>
        <item name="colorPrimary">@color/x_accent_primary</item>
    </style>
    
    <!-- Custom Styles -->
    <style name="Xipher" parent="">
    </style>
    
    <style name="Xipher.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/x_bg_card</item>
        <item name="shapeAppearance">@style/Xipher.BottomSheet.Shape</item>
    </style>
    
    <style name="Xipher.BottomSheet.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="Xipher.Text" parent="">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="Xipher.Text.Title">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Xipher.Text.Subtitle">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="Xipher.Text.ChatName">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Xipher.Text.ChatMessage">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Xipher.Text.Time">
        <item name="android:textColor">@color/x_text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="Xipher.Text.Link">
        <item name="android:textColor">@color/x_text_link</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Xipher.Button" parent="">
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Xipher.Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/x_on_accent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Xipher.Button.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/x_accent_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Xipher.Button.Text">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/x_accent_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Avatar Styles -->
    <style name="Xipher.Avatar" parent="">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
    </style>
    
    <style name="Xipher.Avatar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <style name="Xipher.Avatar.Large">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>
    
    <!-- Input Styles -->
    <style name="Xipher.EditText">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:textColor">@color/x_text_primary</item>
        <item name="android:textColorHint">@color/x_text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Xipher.Toolbar">
        <item name="android:background">@color/x_bg_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- Badge Style -->
    <style name="Xipher.Badge">
        <item name="android:background">@drawable/badge_bg</item>
        <item name="android:textColor">@color/x_on_accent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Xipher.FAB">
        <item name="android:background">@drawable/fab_bg</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>
</resources>
