<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/x_bg_card_strong" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/x_accent_start" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/x_bg_card" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/x_border" />
        </shape>
    </item>
</selector>
